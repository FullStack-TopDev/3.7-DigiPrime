
{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "paths": {
      "app/*": ["src/app/*"],
      "components/*": ["src/app/components/*"],
      "context/*": ["src/app/context/*"],
      "pages/*": ["src/app/pages/*"]
    },
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "src/typings.d.ts"
    ],
    "baseUrl": ".",
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "module": "esNext",
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@emotion/core", "node","jest"]
  },
  "exclude": [
    "node_modules"
  ]
}
